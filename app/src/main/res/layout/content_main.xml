<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.nirmal.sintacs.MainActivity">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@raw/gifs"
            android:id="@+id/loadImage"
            android:visibility="gone"
            android:background="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Technical Events"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_medium"
            android:gravity="center"
            android:id="@+id/tech_names"
            android:fontFamily="sans-serif"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/tech_events"
            android:layout_width="match_parent"
            app:reverseLayout="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non - Technical Events"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_medium"
            android:gravity="center"
            android:id="@+id/non_tech_names"
            android:fontFamily="sans-serif"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/non_tech_events"
            android:layout_width="match_parent"
            app:reverseLayout="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online App Design"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_medium"
            android:gravity="center"
            android:id="@+id/app_name"
            android:fontFamily="sans-serif"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/onlineapp"

            android:id="@+id/app_event"/>

    </LinearLayout>
</ScrollView>
